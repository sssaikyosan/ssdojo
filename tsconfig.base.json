{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "checkJs": true,
    "skipLibCheck": true,
    "lib": [ ],

    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
  },
  "exclude": [ "dist", "node_modules" ]
}
